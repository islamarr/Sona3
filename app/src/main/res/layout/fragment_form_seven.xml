<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50dp"
        android:background="@color/red"
        android:gravity="center"
        android:text="@string/family_story"
        android:textColor="@color/white"
        android:textSize="@dimen/_20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_family_story"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="@dimen/_150dp"
        android:text="@string/write_family_story"
        android:textColor="@color/black"
        android:textSize="@dimen/_20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/Et_family_story"
        android:layout_width="320dp"
        android:layout_height="150dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/border"
        android:gravity="center_horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_family_story" />


    <Button
        android:id="@+id/next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="120dp"
        android:layout_height="@dimen/_50dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="20dp"
        android:text="التالي"
        android:textSize="18sp" />

    <Button
        android:id="@+id/befor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="120dp"
        android:layout_height="@dimen/_50dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="36dp"
        android:text="السابق"
        android:textSize="18sp" />

</androidx.constraintlayout.widget.ConstraintLayout>