<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50dp"
        android:background="@color/red"
        android:gravity="center"
        android:text="@string/family_expenses"
        android:textColor="@color/white"
        android:textSize="@dimen/_20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tv_type_of_expenses"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="@dimen/_150dp"
        android:text="@string/type_of_expenses"
        android:textColor="@color/black"
        android:textSize="@dimen/_20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/Et_type_of_expenses"
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:layout_marginStart="30dp"
        android:padding="@dimen/_10dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_type_of_expenses"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/border"
        app:layout_constraintTop_toTopOf="@+id/tv_type_of_expenses"
        />

    <TextView
        android:id="@+id/tv_total_of_expenses"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginTop="@dimen/_10dp"
        android:layout_marginEnd="8dp"
        android:text="@string/total_of_expenses"
        android:textColor="@color/black"
        android:textSize="@dimen/_20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_type_of_expenses" />

    <EditText
        android:id="@+id/Et_total_of_expenses"
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:layout_marginStart="80dp"
        android:inputType="numberDecimal"
        android:padding="@dimen/_10dp"
        android:background="@drawable/border"
        app:layout_constraintBottom_toBottomOf="@+id/tv_total_of_expenses"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_total_of_expenses"
       />


    <Button
        android:id="@+id/next"
        android:layout_width="120dp"
        android:layout_height="@dimen/_50dp"
        android:layout_marginStart="36dp"
        android:text="التالي"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/befor"
        android:layout_width="120dp"
        android:layout_height="@dimen/_50dp"
        android:layout_marginEnd="36dp"
        android:text="السابق"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>