<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Sona3" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Sona3.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Sona3.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Sona3.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="role_text">
        <item name="android:textColor">@color/roles_text_color</item>
        <item name="android:textSize">@dimen/_30sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="role_bottom_sheet">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginEnd">@dimen/_30dp</item>
        <item name="android:textSize">@dimen/_20sp</item>
        <item name="android:textStyle">bold|italic</item>
    </style>

    <style name="profile_edit_text" parent="Widget.AppCompat.EditText">
        <item name="background">@color/transparent</item>
        <item name="android:enabled">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_20sp</item>
    </style>
</resources>